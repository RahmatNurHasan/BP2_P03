<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:background="@drawable/bg_header_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:src="@drawable/logo_amikom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:contentDescription="Logo AMIKOM"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_welcome_message"
                    android:text="Selamat Datang, Mahasiswa!"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_username"
                    android:text="Rahmat Nur Hasan"
                    android:textColor="@color/amikom_light"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Menu Grid -->
        <GridLayout
            android:id="@+id/gridMenu"
            android:columnCount="2"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp">

            <!-- Card: Isi Matkul -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_matkul">
                <ImageView
                    android:src="@drawable/ic_subject"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Isi Matkul"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Card: Info Kampus -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_info">
                <ImageView
                    android:src="@drawable/ic_info"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Info Kampus"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Card: Ruangan -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_ruang">
                <ImageView
                    android:src="@drawable/ic_room"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Tempat / Ruang"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Card: Profile -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_profile">
                <ImageView
                    android:src="@drawable/ic_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Card: Share App -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_share">
                <ImageView
                    android:src="@drawable/ic_share"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Bagikan Aplikasi"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Card: Logout -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_menu_card"
                android:padding="20dp"
                android:layout_margin="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/btn_logout">
                <ImageView
                    android:src="@drawable/ic_logout"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <TextView
                    android:text="Logout"
                    android:textStyle="bold"
                    android:textColor="@color/amikom_purple"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </GridLayout>
    </LinearLayout>
</ScrollView>
