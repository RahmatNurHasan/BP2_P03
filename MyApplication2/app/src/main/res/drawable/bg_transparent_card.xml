<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna putih semi-transparan (sekitar 25%) -->
    <solid android:color="#1FFFFFFF" />

    <!-- Sudut agak besar biar lembut -->
    <corners android:radius="24dp" />

    <!-- Padding biar isi form gak nempel ke tepi -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Garis tepi lembut, semi-transparan -->
    <stroke
        android:color="#33FFFFFF"
        android:width="1dp" />
</shape>
