<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#6A00F4"
                android:endColor="#3C096C"
                android:type="linear" />
            <corners android:radius="18dp" />
            <stroke android:color="#FFFFFFFF" android:width="1dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="#9D4EDD"
                android:endColor="#5F0F40"
                android:type="linear" />
            <corners android:radius="18dp" />
            <stroke android:color="#AAFFFFFF" android:width="1dp" />
            <padding android:left="12dp" android:right="12dp" android:top="6dp" android:bottom="6dp" />
        </shape>
    </item>
</selector>
